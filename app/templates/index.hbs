{{outlet}}

<div class="row">
  <div class="col-md-12">
    <h1>{{model.description}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>Details</h3>
    <div id="thing-properties">
      {{properties-object properties=model.properties}}
    </div>
  </div>
  <div class="col-md-4">
    <h3>Location Info</h3>
    <div id="location-properties">
      {{entity-details entity=model.firstLocation attributes="description,encodingType"}}
    </div>
  </div>
  <div class="col-md-4">
    <h3>Location</h3>
    <div id="location-map-view">
      {{geojson-map geojson=model.firstLocation.location}}
    </div>
  </div>
</div>
<div id="datastreams">
{{#each model.datastreams as |datastream|}}
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <h2>{{datastream.description}}</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h3>Datastream</h3>
          <div class="datastream-details">
            {{entity-details entity=datastream attributes="description,observationType"}}
          </div>
        </div>
        <div class="col-md-4">
          <h3>Observed Property</h3>
          <div class="observed-property-details">
            {{entity-details entity=datastream.observed-property attributes="name,description,definition"}}
          </div>
        </div>
        <div class="col-md-4">
          <h3>Sensor</h3>
          <div class="sensor-details">
            {{entity-details entity=datastream.sensor attributes="description,metadata"}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <h2>Last Value</h2>
      <div class="observation-preview">
        {{observation-preview observation=datastream.last-observation.firstObject}}
      </div>
    </div>
  </div>
{{/each}}
</div>
