{{outlet}}

<div class="row">
  <div class="col-md-12">
    <h1>{{model.description}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>Details</h3>
    <div id="thing-properties">
      {{properties-object properties=model.properties}}
    </div>
  </div>
  <div class="col-md-4">
    <h3>Location Info</h3>
    <div id="location-properties">
      <dl>
        <dt>Description</dt>
        <dd>
          <pre>{{model.firstLocation.description}}</pre>
        </dd>

        <dt>Encoding Type</dt>
        <dd>
          <pre>{{model.firstLocation.encodingType}}</pre>
        </dd>
      </dl>
    </div>
  </div>
  <div class="col-md-4">
    <h3>Location</h3>
    <div id="location-map-view">
      {{geojson-map geojson=model.firstLocation.location}}
    </div>
  </div>
</div>
<div id="datastreams">
{{#each model.datastreams as |datastream|}}
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <h2>{{datastream.description}}</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <h3>Datastream</h3>
          <div class="datastream-details">
            <dl>
              <dt>Description</dt>
              <dd>
                <pre>{{datastream.description}}</pre>
              </dd>

              <dt>Observation Type</dt>
              <dd>
                <pre>{{datastream.observationType}}</pre>
              </dd>
            </dl>
          </div>
        </div>
        <div class="col-md-4">
          <h3>Observed Property</h3>
          <div class="observed-property-details"></div>
        </div>
        <div class="col-md-4">
          <h3>Sensor</h3>
          <div class="sensor-details"></div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <h2>Last Value</h2>
      <div class="observation-preview"></div>
    </div>
  </div>
{{/each}}
</div>
