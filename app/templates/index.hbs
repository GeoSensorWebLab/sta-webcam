{{outlet}}

<div class="row">
  <div class="col-md-12">
    <h1>{{model.description}}</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h3>Details</h3>
    <div id="thing-properties">
      {{properties-object properties=model.properties}}
    </div>
  </div>
  <div class="col-md-4">
    <h3>Location Info</h3>
    <div id="location-properties">
      <dl>
        <dt>Description</dt>
        <dd>
          <pre>{{model.firstLocation.description}}</pre>
        </dd>

        <dt>Encoding Type</dt>
        <dd>
          <pre>{{model.firstLocation.encodingType}}</pre>
        </dd>
      </dl>

    </div>
  </div>
  <div class="col-md-4">
    <h3>Location</h3>
    <div id="location-map-view">
      {{geojson-map geojson=model.firstLocation.location}}
    </div>
  </div>
</div>
<div id="datastreams"></div>
