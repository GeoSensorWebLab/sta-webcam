<!-- slide wrapper -->
<div class="carousel-preview">
  <div class="item">
    {{#if isLoading}}
    <h2>Loading</h2>
    {{/if}}
    <a href={{active-observation.result}} class="{{if isLoading "invisible"}}">
      <img src="{{active-observation.result}}" class="img-responsive">
    </a>
    <p class="observation phenomenonTime">{{active-observation.phenomenonTime}}</p>
  </div>
</div>

{{#if hasPreviousObservation}}
<div class="left carousel-control" {{action "loadPrevious"}}>
  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
  <span class="sr-only">Previous</span>
</div>
{{/if}}

{{#if hasNextObservation}}
<div class="right carousel-control" {{action "loadNext"}}>
  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
  <span class="sr-only">Next</span>
</div>
{{/if}}
